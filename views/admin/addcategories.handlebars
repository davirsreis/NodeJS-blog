    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="d-flex justify-content-center">
    <div class="card text-center" style="width: 30rem;">
        <h3>Nova categoria</h3>
        <div class="card-body">
            <form action="/admin/categories/new" method="POST">
                <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control mb-2">
                <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control">
                <br>
                <button type="submit" class="btn btn-success">Criar categoria</button>
                <a href="/admin/categories/" class="btn btn-danger">Cancelar</a>
            </form>
        </div>
    </div>
</div>
