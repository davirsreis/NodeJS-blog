<div class="p-5 rounded-lg text-color-custom">
    {{#each erros}}
        <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}

    <div class="d-flex justify-content-center">
        <div class="card text-center card-custom" style="width: 30rem;">
            <h3>Nova categoria</h3>
            <div class="card-body">
                <form action="/admin/categories/new" method="POST">
                    <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control mb-2 form-custom">
                    <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control form-custom">
                    <input type="text" id="description" name="description" placeholder="Descrição da categoria" class="form-control form-custom">
                    <br>
                    <button type="submit" class="btn btn-success">Criar categoria</button>
                    <a href="/admin/categories/" class="btn btn-danger">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

