{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="d-flex justify-content-center">
    <div class="card text-center" style="width: 30rem;">
        <h3>Editar publicação:</h3>
        <div class="card-body">
            <form action="/admin/post/edit" method="POST">
                <input type="hidden" value="{{post._id}}" name="id">
                <input type="text" id="titulo" name="titulo" placeholder="Titulo da publicação" class="form-control mb-2" value="{{post.titulo}}">
                <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control mb-2" value="{{post.slug}}">
                <input type="text" id="description" name="description" placeholder="Descrição" class="form-control mb-2" value="{{post.description}}">
                <textarea name="content" class="form-control mb-2">{{post.content}}</textarea>
                <select name="categorie" class="form-select">
                    {{#each categories}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-success mt-4">Editar publicação</button>
                <a href="/admin/posts/" class="btn btn-danger mt-4">Cancelar</a>
            </form>
        </div>
    </div>
</div>
