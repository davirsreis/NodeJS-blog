<h2>Lista de categorias:</h2>
<hr>
<div class="text-center">
    <a href="/admin/categories/add"><button class="btn btn-primary">Adicionar categoria</button></a>
</div>

{{#each categories}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <div class="btn-group">
                <p class="mt-2">
                    <a href="/admin/categories/edit/{{id}}"><button class="btn btn-success">Editar categoria</button></a>
                    <a href="/admin/categories/delete/{{id}}"><button class="btn btn-danger">Deletar categoria</button></a>
                </p>
                {{!-- <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
                </form> --}}
            </div>
        </div>
    </div>
{{else}}

    <h4 class="mt-3">Nenhuma categoria registrada!</h4>

{{/each}}