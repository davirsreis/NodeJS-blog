<div class="p-5 rounded-lg text-color-custom">

    {{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}
    <div class="d-flex justify-content-center">
        <div class="card text-center card-custom" style="width: 30rem;">
            <h3>Nova publicação</h4>
            <div class="card-body">
                <form action="/admin/posts/new" method="POST">
                    <input type="text" name="titulo" class="form-control mb-2 form-custom" placeholder="Título">
                    <input type="text" name="slug" class="form-control mb-2 form-custom" placeholder="Slug">
                    <input type="text" name="description" class="form-control mb-2 form-custom" placeholder="Descrição">
                    <textarea name="content" class="form-control mb-2 form-custom" placeholder="Conteúdo"></textarea>
                    <select name="categorie" class="form-select form-custom">
                        {{#each categories}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                        {{/each}}
                    </select>
                    <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
                    <a href="/admin/posts/" class="btn btn-danger mt-4">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

