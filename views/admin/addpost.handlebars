{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="d-flex justify-content-center">
    <div class="card text-center" style="width: 30rem;">
        <h3>Nova publicação</h4>
        <div class="card-body">
            <form action="/admin/posts/new" method="POST">
                <input type="text" name="titulo" class="form-control mb-2" placeholder="Título">
                <input type="text" name="slug" class="form-control mb-2" placeholder="Slug">
                <input type="text" name="description" class="form-control mb-2" placeholder="Descrição">
                <textarea name="content" class="form-control mb-2" placeholder="Conteúdo"></textarea>
                <select name="categorie" class="form-select">
                    {{#each categories}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
                <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
                <a href="/admin/posts/" class="btn btn-danger mt-4">Cancelar</a>
            </form>
        </div>
    </div>
</div>
