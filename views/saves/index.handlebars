<div class="card-body text-color-custom p-5">
    <h1>Publicações salvas: </h1>
    {{#each saves}}
    <div class="card mt-4 text-color-custom card-custom">
        <div class="card-body">
            <div class="btn-group d-flex justify-content-between">
                <h3 class="title-custom">{{post.titulo}}</h3>
                {{#if user}}
                <form action="/saves/new/{{id}}" method="POST">
                    <button type="submit" style="background-color: #121212; border: none;"><img alt="logo" width="30px" class="" style="background-color: #121212;" src="https://papik.pro/uploads/posts/2022-08/thumbs/1661459344_19-papik-pro-p-beloe-serdtse-stiker-png-19.png"></button>
                </form>
                {{else}}
                {{/if}}
            </div>
            <p class="desc-custom">{{description}}</p>
            <a href="/post/{{slug}}"><button class="btn text-color-custom btn-custom">Leia mais</button></a>
            <hr>
            <div class="d-flex justify-content-between">
                <small>Categoria: {{categorie.nome}}</small>
                <small>Autor(a): {{author}}</small>
            </div>
            <small>Data de publicação: {{date}}</small>
        </div>
    </div>
    <br>

    {{else}}
        <h5>Nenhuma publicação</h5>
    {{/each}}

</div>